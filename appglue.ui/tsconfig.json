{
    "extends": "@tsconfig/node12/tsconfig.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "jsx": "react",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist/",
        "skipLibCheck": true
    },
    "include": [
        "src/"
    ]
}
